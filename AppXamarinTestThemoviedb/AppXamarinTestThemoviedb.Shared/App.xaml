		<Color x:FactoryMethod="FromRgb" x:Key="ColorSecondary">
			<x:Arguments>
				<x:Int32>0</x:Int32>
				<x:Int32>0</x:Int32>
				<x:Int32>0</x:Int32>
			</x:Arguments>
		</Color>

		<Color x:FactoryMethod="FromRgb" x:Key="ColorAlternative">
			<x:Arguments>
				<x:Int32>4</x:Int32>
				<x:Int32>43</x:Int32>
				<x:Int32>83</x:Int32>
			</x:Arguments>
		</Color>

	</Application.Resources>
</prism:PrismApplication>